#!/bin/sh
sock="/tmp/sad-sock"
paths="$HOME/Music"

if ! test -S "$sock"; then
	echo "$0: no unix domain socket at: ${sock}" >&2
	exit 1
fi

while read -r p; do
	# absolute paths.
	d=$(readlink -f "$p")
	test -d "$d" || continue
	# find mpg, ogg, flac, wav files in specified path make an add command
	# and pipe it to the UDS.
	find "$d" -type f \
		\( -iname "*.mp3" -or \
		-iname "*.ogg" -or \
		-iname "*.flac" -or \
		-iname "*.wav" \) \
		-exec printf 'add %s\n' {} \; | \
		sort -V | socat UNIX:$sock -
done <<!__EOF__
$paths
!__EOF__
